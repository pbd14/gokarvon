{
  "hosting": {
    "site": "gokarvon",
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/ai",
        "destination": "/ai.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "gokarvon.web.app",
        "destination": "https://gokarvon.com",
        "type": 301
      },
      {
        "source": "gokarvon.firebaseapp.com",
        "destination": "https://gokarvon.com",
        "type": 301
      },
      {
        "source": "gokarvon.web.app",
        "destination": "https://www.gokarvon.com",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "/**/*.@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "/**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/**/*.@(jpg|jpeg|png|webp|gif|svg|ico|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800, stale-while-revalidate=86400"
          }
        ]
      }
    ]
  },
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
  ]
}